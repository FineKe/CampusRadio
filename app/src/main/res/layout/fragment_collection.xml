<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

  <include layout="@layout/fragment_collection_title_bar"
      android:layout_width="match_parent"
      android:layout_height="50dp"/>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="40dp"
      android:orientation="horizontal">

      <LinearLayout
          android:background="@color/base_white"
          android:gravity="center_horizontal|bottom"
          android:layout_width="wrap_content"
          android:layout_weight="1"
          android:layout_height="match_parent"
          android:orientation="vertical">

          <TextView
              android:id="@+id/fragment_collection_textView1"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="频道收藏"
              android:textSize="18sp"
              android:textColor="@color/stroke"/>

          <ImageView
              android:id="@+id/fragment_collection_imageView1"
              android:layout_width="80dp"
              android:layout_height="2dp"
              android:background="@color/stroke"/>

      </LinearLayout>


    <LinearLayout
        android:background="@color/base_white"
        android:gravity="center_horizontal|bottom"
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:orientation="vertical">

      <TextView
          android:id="@+id/fragment_collection_textView2"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="主播收藏"
          android:textSize="18sp"
          android:textColor="@color/stroke"/>

      <ImageView
          android:id="@+id/fragment_collection_imageView2"
          android:layout_width="80dp"
          android:layout_height="2dp"
          android:background="@color/stroke"/>

    </LinearLayout>


  </LinearLayout>

  <FrameLayout
      android:id="@+id/fragment_collection_frameLayout"
      android:layout_width="match_parent"
      android:layout_height="match_parent">

  </FrameLayout>
</LinearLayout>